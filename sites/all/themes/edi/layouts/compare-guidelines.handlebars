<div class="row">
  <div class="grid-10 offset-1">
    <p class="mod-add">Click on a Guideline to reveal its indicators. Click the question mark button to see the full text of the indicator. Click the info button to see the full response justifying the score, including sources, comments and discussion.</p>
  </div>
</div>

<div class="guideline-wrapper">
  <div id="name-bar" class="row">
    <div class="name-wrapper">
      <div class="grid-6 small-grid-10">
        <p>Scores comparison</p>
      </div>
      <div class="grid-6 small-grid-2">
        <ul class="countries-name">
          {{#if overalls.countryC}}
            <li><a href="/country/{{overalls.countryC}}">{{overalls.countryC}}</a></li>
          {{/if}}
          {{#if overalls.countryB}}
            <li><a href="/country/{{overalls.countryB}}">{{overalls.countryB}}</a></li>
          {{/if}}
          {{#if overalls.countryA}}
            <li><a href="/country/{{overalls.countryA}}">{{overalls.countryA}}</a></li>
          {{/if}}
        </ul>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="grid-12">
      <div class="mod-guidelines">
        <ul class="guidelines-tabs">
          {{#each pillars}}
            <li><a href="#{{number}}" class="tab-link">{{short}}</a></li>
          {{/each}}
        </ul>
        <ul class="guidelines-index">
          {{#each guidelines}}
            <li class="guidelines" data-id="{{this.id}}" id="guideline-{{this.id}}">
              <a class="guideline" href="#{{this.id}}"><span class="guideline-number" >Guideline {{this.id}}: </span> {{this.name}}</a>
              <div class="more-info-and-rrss">
                <button class="more-info more-info-guideline">?</button>
              </div>
              <div class="compare-scores">
                {{#if scoreCountryA}}
                  <span class="compare-score country-a {{roundScoreA}}">{{scoreCountryA}}</span>
                {{/if}}
                {{#if scoreCountryB}}
                  <span class="compare-score country-b {{roundScoreB}}">{{scoreCountryB}}</span>
                {{/if}}
                {{#if scoreCountryC}}
                  <span class="compare-score country-c {{roundScoreC}}">{{scoreCountryC}}</span>
                {{/if}}
              </div>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="grid-4 offset-4">
      <div id="print"><button class="btn-print-compare">PRINT YOUR REPORT</button></div>
    </div>
  </div>
</div>

<div class="row">
  <div id="compareTotalScores" class="mod-country-detail">
    <div class="grid-12">
      <p class="color-title">practice total scores</p>
    </div>
    <div class="grid-4 small-grid-12">
      <div id="scoresCountryA" class="country-detail country-figure mod-pie">
        <div id="country-figure"></div>
      </div>
    </div>
     <div class="grid-4 small-grid-12">
      <div id="scoresCountryB" class="country-detail country-figure mod-pie">
        <div id="country-figure"></div>
      </div>
    </div>
    <div class="grid-4 small-grid-12">
      <div id="scoresCountryC" class="country-detail country-figure mod-pie">
        <div id="country-figure"></div>
      </div>
    </div>
  </div>
</div>
