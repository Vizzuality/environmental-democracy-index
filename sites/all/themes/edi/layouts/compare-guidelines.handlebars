<div class="row">
  <div class="mod-legend">
    <div class="grid-3 small-grid-6">
      <div class="legend-score very-good">
        <span></span>
        Very good
      </div>
    </div>
    <div class="grid-3 small-grid-6">
      <div class="legend-score good">
        <span></span>
        Good / Yes (Practice)
      </div>
    </div>
    <div class="grid-3 small-grid-6">
      <div class="legend-score fair">
        <span></span>
        Fair / Limited (Practice)
      </div>
    </div>
    <div class="grid-3 small-grid-6">
      <div class="legend-score poor">
        <span></span>
        Poor / No (Practice)
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="mod-overview mod-country-detail">
    <ul>
      {{#if overalls.scoreA}}
        <li class="grid-4 small-grid-12 is-stretch">
          <div class="country-detail country-score">
            <h2><a href="/country/{{overalls.countryA}}">{{../this.countriesNames.country-0}}</a></h2>
            <div class="overall-score">
              <h3>Overall</h3>
              <div class="score {{scoreClassTemplateA}}">
                <svg
                  viewBox="0 0 90 90"
                  perserveAspectRatio="xMinYMid">
                  <g>
                    <circle r="40" cx="45" cy="45" fill="#ffffff" stroke={{overalls.colorScoreA}} stroke-width="10"></circle>
                    <text class="notranslate" x="45" y="55" fill="#000000" font-family="Segoe" font-size="30" text-anchor="middle">{{overalls.scoreA}}</text>
                  </g>
                </svg>
              </div>
            </div>

            <h4>Pillars scores</h4>
            <ul>
              <li><p>Access to information</p><span class="pillar-score {{../roundScoresA.score-1}}">{{../pillarsCountryA.score-1}}</span></li>
              <li><p>Public participation</p><span class="pillar-score {{../roundScoresA.score-2}}">{{../pillarsCountryA.score-2}}</span></li>
              <li><p>Access to justice</p><span class="pillar-score {{../roundScoresA.score-3}}">{{../pillarsCountryA.score-3}}</span></li>
            </ul>
          </div>
        </li>
      {{/if}}
